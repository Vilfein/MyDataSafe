<Window x:Class="MyDataSafe.Windows.LoginPage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MyDataSafe.Windows"
        ResizeMode="NoResize"
                Style="{StaticResource Bck}"
        WindowStartupLocation="CenterScreen"
        mc:Ignorable="d"
        Title="LoginPage" Height="165" Width="220" Icon="/Icons/safe-box.png">
    <StackPanel Orientation="Vertical" HorizontalAlignment="Center">
        <Label Content="Name:" Foreground="White"></Label>
        <TextBox x:Name="LoginName"/>
        <Label Content="Password:" Foreground="White"></Label>
        <PasswordBox x:Name="LoginPass" Width="130" />
        <Button Style="{StaticResource BTNS}"  Content="Log In" Click="Button_Click" Margin="0,10" IsDefault="True"/>

    </StackPanel>
</Window>
